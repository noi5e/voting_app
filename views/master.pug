html
	head
		title Voting App
		link(
			rel='stylesheet'
			href='/css/bootstrap.css'
		)
		link(
			rel='stylesheet'
			href='/css/style.css'
		)
		link(
			rel='stylesheet'
			href='/css/voting_app.css'
		)
	body
		div(class='container')
			div(class='header clearfix')
				nav
					ul(class='nav nav-pills pull-right')
						li(role='presentation')
							a(href='/') Home
						if user
							li(role='presentation')
								a(href='/polls/create_poll') Create Poll
							li(role='presentation')
								a(href='/polls/my_polls') My Polls
							li(role='presentation')
								a(href='/users/logout') Logout
						else
							li(role='presentation')
								a(href='/users/login') Login
							li(role='presentation')
								a(href='/users/register') Register

				h3(class='text-muted') FreeCodeCamp Voting App

			div(class='row')
				div(class='col-lg-12') 

					if (success_msg && success_msg.length > 0) 
						div(class='alert alert-success') #{success_msg}

					if (error_msg && error_msg.length > 0)
						div(class='alert alert-danger') #{error_msg}

					if (error && error.length > 0)
						div(class='alert alert-danger') #{error}


				block content

			footer(class='footer')
				p &copy; 2016 Will G
	block scripts
